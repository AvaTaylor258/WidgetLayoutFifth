<BoxLayoutExample>:
    orientation: "vertical"
    spacing: "20dp"
    Button:
        text: "Button A"
        background_color: 255, 1, 1, 1
        size_hint: .5, 2
        # horizontal positions: "x" (left), "center_x", "right"
        # vertical positions: "y" (bottom), "center_y", "top"
        pos_hint: {"center_x":.5}
    Button:
        text: "Button B"
        background_color: 0, 255, 0, 1
        size_hint: 1, 1
    BoxLayout:
        Button:
            text: "Button C1"
        Label:
            text: "Hello Class"
        Button:
            text: "Button C2"
    Button:
        text: "Button D"
        # on_press: text: "bling"
    Button:
        text: "Button E"
        on_press: print("press!")






<MainWidget>
    Button:
        text: "Button A"
        size: "200dp", "300dp"
        pos: "100dp", "100dp"
        color: 1, .5, .5, 1
        background_color: 255, 255, 255, 1

    Label:
        text: "Label A"
        size: "200dp", "300dp"
        pos: "500dp", "100dp"
